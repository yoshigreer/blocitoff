<% if current_user %>
  <h2><%= current_user.email %>'s todo items</h2>
  <%= render partial: 'items/item', locals: {items: @items} %>
  <!--<%= render partial: 'items/form', locals: {user: @user} %> -->

  <%= form_for user_items_path(@user) do |f| %>
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter todo" %>
      <%= f.submit "Add Todo", class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>

<% if !current_user %>
  <h2>Please sign up or sign in</h2>
<% end %>
